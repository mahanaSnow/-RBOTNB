
<section class="rental-requests">
  <h2>Demandes de Location</h2>
  <div class="requests-list">
    <% if @rental_requests.present? %>
      <% @rental_requests.each do |request| %>
        <div class="request">
          <p><strong>Bot:</strong> <%= request.bot.name %></p>
          <p><strong>Status:</strong> <%= request.status %></p>
          <%= link_to 'Accept', accept_rental_path(request), method: :patch, class: 'accept-btn' %>
          <%= link_to 'Decline', decline_rental_path(request), method: :patch, class: 'decline-btn' %>
        </div>
      <% end %>
    <% else %>
      <p>Aucune demande de location re√ßue.</p>
    <% end %>
  </div>
</section>
