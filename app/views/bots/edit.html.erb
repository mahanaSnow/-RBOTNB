<%= render 'layouts/navbar' %>

<div class="awwwards-edit-bot-container">
  <%= form_with(model: @bot, local: true, html: { class: 'awwwards-edit-bot-form' }) do |form| %>
    <% if @bot.errors.any? %>
      <div class="edit-bot-errors">
        <h2><%= pluralize(@bot.errors.count, "erreur") %> :</h2>
        <ul>
          <% @bot.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="edit-bot-field">
      <%= form.label :name, 'Nom du Bot', class: 'edit-bot-label' %>
      <%= form.text_field :name, class: 'edit-bot-input' %>
    </div>

    <div class="edit-bot-field">
      <%= form.label :description, 'Description', class: 'edit-bot-label' %>
      <%= form.text_area :description, class: 'edit-bot-input' %>
    </div>

    <div class="edit-bot-field">
      <%= form.label :price_per_day, 'Prix par Jour (€)', class: 'edit-bot-label' %>
      <%= form.number_field :price_per_day, class: 'edit-bot-input' %>
    </div>

    <div class="edit-bot-actions">
      <%= form.submit 'Mettre à jour', class: 'edit-bot-submit-btn' %>
      <%= link_to 'Annuler', bots_path, class: 'edit-bot-cancel-link' %>
    </div>
  <% end %>
</div>

<%= render 'layouts/bot' %>
