<!-- app/views/bots/show.html.erb -->
<h1><%= @bot.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @bot.description %>
</p>

<p>
  <strong>Price per day:</strong>
  <%= number_to_currency(@bot.price_per_day) %>
</p>

<%= form_with(model: Rental.new, url: rentals_path, local: true) do |form| %>
  <%= form.hidden_field :bot_id, value: @bot.id %>
  <%= form.label :start_date %>
  <%= form.date_field :start_date %>
  <%= form.label :end_date %>
  <%= form.date_field :end_date %>
  <%= form.submit "Rent this Bot" %>
<% end %>

<%= link_to 'Back to List', bots_path %>
