<%= render 'layouts/navbar' %>

<div class="awwwards-inspired-bot-form">
  <%= form_with(model: @bot, local: true, html: { class: 'awwwards-form' }) do |form| %>
    <% if @bot.errors.any? %>
      <div class="awwwards-errors">
        <!-- Affichage des erreurs ici -->
      </div>
    <% end %>

    <div class="awwwards-field">
      <%= form.label :name, 'Nom du Bot', class: 'awwwards-label' %>
      <%= form.text_field :name, class: 'awwwards-input' %>
    </div>

    <div class="awwwards-field">
      <%= form.label :description, 'Personnalité du Bot', class: 'awwwards-label' %>
      <%= form.text_area :description, class: 'awwwards-input' %>
    </div>

    <div class="awwwards-field">
      <%= form.label :price_per_day, 'Tarif Journalier (€)', class: 'awwwards-label' %>
      <%= form.number_field :price_per_day, class: 'awwwards-input' %>
    </div>

    <div class="awwwards-actions">
      <%= form.submit 'Déployer', class: 'awwwards-submit' %>
      <%= link_to 'Retour', bots_path, class: 'awwwards-back' %>
    </div>
  <% end %>
</div>

<%= render 'layouts/bot' %>
